//Calculate EMI
#include <stdio.h>
#include <math.h>
int main(){
    float loan, duration, rate;
    printf("enter loan amount");
    scanf("%f",&loan);
    printf("enter duration");
    scanf("%f",&duration);
    printf("enter yearly rate");
    scanf("%f",&rate);
    
    
    
    

void EMI(){
    rate=rate/12;
    duration=duration*12;
    float x= (1+rate/100);
    float n=pow(x,duration);
    float d=0;
    for(int i=0;i<duration;i++){
        float den=pow(x,i);
        
         d=d+den;
    }
    float emi=(loan*n)/d;
    printf("%f",emi);
}
EMI();
return 0;
}
