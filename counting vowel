#include <stdio.h>
int main(){
   char s[50];
   int n,i,f=0,p=0;
   printf("type something = " );
   fgets(s,50,stdin);
   printf("choose case 0 or 1 : ");
   scanf("%d",&n);
   if (n == 0) {
    for (i=0;s[i]!='\0';i++)
    {
     if ((s[i]=='a')||(s[i]=='e')||(s[i]=='i')||(s[i]=='o')||(s[i]=='u')||(s[i]=='A')||(s[i]=='E')||(s[i]=='I')||(s[i]=='O')||(s[i]=='U')){
         f++;
     }}
     printf("vowels = %d",f);}
     else if (n==1){
         for (i=0;s[i]!='\0';i++)
         {
              if ((s[i]=='a')||(s[i]=='e')||(s[i]=='i')||(s[i]=='o')||(s[i]=='u')){
                  f++;
              }
              else if 
              ((s[i]=='A')||(s[i]=='E')||(s[i]=='I')||(s[i]=='O')||(s[i]=='U')){
                  p++;
              }}
              printf("chote vowels = %d bade vowels = %d",f,p);}
              return 0;
}
              
              
